<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="@dimen/_16sdp"
    tools:context="com.brainitec.loginassignment.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"

            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_signup_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="User name"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />
            <EditText
                android:id="@+id/editText_signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />
            <EditText
                android:id="@+id/editText_signup_passowrd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />
          <EditText
                android:id="@+id/editText_signup_passowrd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_button"
                android:ems="10"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Sigin Up"
                android:textAllCaps="false"
                android:textColor="@color/color_icons"

                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_alreadyUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ems="10"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Already user? LOGIN"
                android:textColor="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ems="10"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Login using"
                android:textColor="@color/colorPrimary_text"
                android:textSize="@dimen/_14ssp" />

          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/googleplus" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
